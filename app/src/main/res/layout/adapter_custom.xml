<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/id_adapterImage"
        android:layout_width="75dp"
        android:layout_height="59dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/id_adapterDate"
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:text="date"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_adapterImage"
        app:layout_constraintEnd_toStartOf="@+id/id_adapterTemp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_adapterImage"
        app:layout_constraintVertical_bias="0.542" />

    <TextView
        android:id="@+id/id_adapterTemp"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:text="temp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_adapterImage"
        app:layout_constraintEnd_toStartOf="@+id/id_adapterImage"
        app:layout_constraintTop_toTopOf="@+id/id_adapterImage"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/id_adapterDes"
        android:layout_width="98dp"
        android:layout_height="27dp"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_adapterImage"
        app:layout_constraintEnd_toStartOf="@+id/id_adapterImage"
        app:layout_constraintStart_toEndOf="@+id/id_adapterTemp"
        app:layout_constraintTop_toTopOf="@+id/id_adapterImage" />
</androidx.constraintlayout.widget.ConstraintLayout>